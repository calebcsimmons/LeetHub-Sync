{
  "manifest_version": 3,
  "name": "LeetHub Sync",
  "description": "A Chrome extension that saves your latest Leetcode submissions to your Github repository automatically!",
  "version": "1.01",
  "permissions": [
      "storage",
      "scripting"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/main.html"
  },
  "icons": {
    "48": "images/lh_icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
